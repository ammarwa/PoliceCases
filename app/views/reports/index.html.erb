<p id="notice"><%= notice %></p>

<h1>Reports</h1>
<%= link_to 'Sort by date', sort_date_path %> |
<%= link_to 'Sort by location', sort_loc_path %>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Video</th>
      <th>Photo</th>
      <th>Sound</th>
      <th>Personid</th>
      <th>Done</th>
      <th>Location</th>
      <th>Date Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.text %></td>
        <td><%= report.video %></td>
        <td><%= report.photo %></td>
        <td><%= report.sound %></td>
        <td><%= report.personId %></td>
        <td><%= report.done %></td>
        <td><%= report.location %></td>
        <td><%= report.created_at %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>
